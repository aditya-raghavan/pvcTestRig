                                <TextBlock TextAlignment="Center" Text="PENDNG" FontWeight="Bold" FontSize="14" Padding="2" Background="#cccccc" ></TextBlock>
                            </Border>

                            <Border Grid.Column="0" Grid.Row="2" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="Fwd Voltage" FontWeight="Bold" FontSize="14" Padding="2" Background="#cccccc" Margin="0.4,0.4,0,0" />
                            </Border>
                            <Border Grid.Column="1" Grid.Row="2" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="Volts" FontWeight="Bold" FontSize="14" Padding="2"  ></TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="2" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="14" Padding="2"  ><Run Text="+"/><Run Text="1.3"/></TextBlock>
                            </Border>
                            <Border Grid.Column="3" Grid.Row="2" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="+0.0" FontWeight="Bold" FontSize="14" Padding="2" Foreground="Blue"  ></TextBlock>
                            </Border>
                            <Border Grid.Column="4" Grid.Row="2" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="14" Padding="2"  ><Run Text="+"/><Run Text="2.7"/></TextBlock>
                            </Border>
                            <Border Grid.Column="5" Grid.Row="2" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="PENDNG" FontWeight="Bold" FontSize="14" Padding="2" Background="#cccccc" ></TextBlock>
                            </Border>

                            <Border Grid.Column="0" Grid.Row="3" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="14" Padding="2" Background="#cccccc" Text="Fwd Drop 1" />
                            </Border>
                            <Border Grid.Column="1" Grid.Row="3" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="mV" FontWeight="Bold" FontSize="14" Padding="2"  ></TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="3" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="14" Padding="2"  ><Run Text="+"/><Run Text="300"/></TextBlock>
