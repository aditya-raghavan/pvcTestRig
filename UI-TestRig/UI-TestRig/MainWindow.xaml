                                <TextBlock TextAlignment="Center" Text="Fwd Drop 2" FontWeight="Bold" FontSize="14" Padding="2" Background="#cccccc" ></TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="4" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="mV" FontWeight="Bold" FontSize="14" Padding="2"  ></TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="4" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="14" Padding="2"  ><Run Text="+"/><Run Text="300"/></TextBlock>
                            </Border>
                            <Border Grid.Column="3" Grid.Row="4" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="+0" FontWeight="Bold" FontSize="14" Padding="2" Foreground="Blue"  ></TextBlock>
                            </Border>
                            <Border Grid.Column="4" Grid.Row="4" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="14" Padding="2"  ><Run Text="+"/><Run Text="500"/></TextBlock>
                            </Border>
                            <Border Grid.Column="5" Grid.Row="4" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="PENDNG" FontWeight="Bold" FontSize="14" Padding="2" Background="#cccccc" ></TextBlock>
                            </Border>

                            <Border Grid.Column="0" Grid.Row="5" BorderThickness="2" BorderBrush="#4d4d4d">
                                <TextBlock TextAlignment="Center" Text="Fwd Drop 3" FontWeight="Bold" FontSize="14" Padding="2" Background="#cccccc" ></TextBlock>
