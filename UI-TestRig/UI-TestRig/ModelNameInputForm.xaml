<Window x:Class="UI_TestRig.ModelNameInputForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_TestRig"
        mc:Ignorable="d"
        Title="Enter Model Name" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label HorizontalContentAlignment="Center" FontWeight="Bold">Model Name</Label>
            <TextBox VerticalContentAlignment="Center" x:Name="modelNameInputText" Padding="2" TextAlignment="Center" Margin="20,0,20,0" Height="50" FontWeight="Bold" FontSize="16"></TextBox>
            <Button Margin="100,20,100,0" Height="30" Content="Save Model" FontWeight="Bold" Click="Button_Click"></Button>
        </StackPanel>
        
    </Grid>
</Window>
